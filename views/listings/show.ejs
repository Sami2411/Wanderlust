<% layout("/layouts/boilerplate") %>
<body>
    <div class="row">
    <div class="col-8 offset-2">
            <br><br>
    <h3><%=listing1.title%></h3>
    <br><br>
    <div class="card col-6 offset-2">
            <img src="<%= listing1.image.url %>" class="card-img-top show-img" alt="listing_image">
            <div class="card-body">
              <p class="card-text"></p>
              Owned by:<i><%=listing1.owner.username %></i>
              <br>
              <li><%= listing1.description %></li>
              <li> &#8377;<%= listing1.price.toLocaleString("en-IN") %></li>
              <li><%= listing1.location %></li>
              <li><%= listing1.country %></li>
            </div>         
            
    </div>
    <br><br>

    <div class="btns">
        <a href="/listings/<%= listing1._id%>/edit" class="btn btn-dark col-2 offset-2">Edit the listings</a>

        <br><br>
        <form method="POST" action="/listings/<%= listing1._id%>?_method=DELETE">
            <button class="btn btn-dark offset-4">Delete this listing</button>
          
        </form>
    </div>
    
    <br><br>
    <hr>
    <div class="col-8 offset-2">
        <h4>Leave a Review</h4>
        <form action="/listings/<%=listing1._id %>/reviews" method="POST" novalidate class="needs-validation">
            <!-- <div class="mb-3 mt-3">
                <label for="rating"class="form-label">Rating</label>
                <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
            </div> -->
            <div class="mb-3 mt-3">
            <label for="rating"class="form-label">Rating</label>
            <fieldset class="starability-slot">
                
                
                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                <label for="first-rate1" title="Terrible">1 star</label>
                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                <label for="first-rate2" title="Not good">2 stars</label>
                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                <label for="first-rate3" title="Average">3 stars</label>
                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                <label for="first-rate4" title="Very good">4 stars</label>
                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                <label for="first-rate5" title="Amazing">5 stars</label>
            </fieldset>
            </div>
            <div class="mt-3 mb-3">
                <label for="comment"class="form-label">Comments</label>
                <textarea name="review[comment]" id="comment" cols="30" rows="5"class="form-control" required></textarea>
                <div class="invalid-comment">please add some comments</div>

            </div>
            <br><br>
            <button class="btn btn-outline-dark">Submit</button>

        </form>
        <hr/>
        <h4>All Reviews</h4>
       
        <ul>
        <% for(review of listing1.reviews){%>
            <li><%= review.comment%></li>
            <li><%= review.rating%></li>
             <p class="starability-result" data-rating=<%= review.rating%>></p>


        <%}%>
        </ul>
    </div>
 
    </div>
    </div>
    
</body>
